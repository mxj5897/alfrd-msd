gestureWidget:

<Image>:
    canvas:
        Rectangle
            texture: self.texture
            size: self.width, self.height
            pos: self.x, self.y

<AddGesturePopUp>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint: [1, .80]
            Image:
                id: add_source
                source: 'temp.png'
        BoxLayout:
            orientation: 'vertical'
            size_hint: [1, .20]
            GridLayout:
                cols: 3
                Label:
                    text: 'Gesture Name'
                    bold: True
                TextInput:
                    id: gestureLabel
                Button:
                    id: start_recording
                    text: 'Start Recording'
                    bold: True
                    on_press: root.start_recording()
                Button:
                    id: save_recording
                    text: 'Save'
                    bold: True
                    on_press: root.addGesture()

<SettingsPopUp>:
    GridLayout:
        cols: 1
        Button:
            text: 'Make Facial Embeddings'
            on_press: root.makeFaceEmbeddings()
            bold: True
        Button:
            text: 'Display Auxilary Info: False'
            id: aux_info
            on_press: root.displayInfo()
            bold: True
        Button:
            text: 'Available Gestures'
            on_press: root.gestureList()
            bold: True
        Button:
            text: 'Help'
            on_press: root.displayHelp()
            bold: True
        

<gestureWidget>:
    BoxLayout:
        size: root.width, root.height
        Image:
            id: image_source
            source: 'foo.png'
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height / 10
        spacing: '5dp'
        AnchorLayout:
            anchor_y: 'bottom'
            size_hint: [1, .10]
            GridLayout:
                cols: 4
                spacing: '10dp'
                Button:
                    id:status
                    text:'Play'
                    bold: True
                    on_press: root.playPause()
                Button:
                    text: 'Add Gesture'
                    bold: True
                    on_press: root.addGesturePopup()
                Button:
                    text: 'Settings'
                    bold: True
                    on_press: root.setting()
                Button:
                    text: 'Close'
                    bold: True
                    on_press: root.close()
